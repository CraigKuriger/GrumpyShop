<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Qwertyshop</title>

    <!-- Bootstrap Core CSS -->
    <link href="../assets/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="../assets/stylesheets/heroic-features.css" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- <img src="app/assets/images/GrumpyShop.png">
 -->
                <p><%= link_to (image_tag "GrumpyShop.png", :class => "small-image"), root_path, class:"navbar-brand"%></p>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#">Services</a>
                    </li>
                    <li>
                        <%= link_to'Categories', categories_path%>
                    </li>
                    <li>
                        <%= link_to('Product List', products_path) if is_admin?%>
                    </li>
                    </ul>
                <div class="pull-right">
                            <%if user_signed_in? %>
                    <ul class="nav navbar-nav">

                        <li class="navbar-brand">
                            Hello <%=current_user.username%>
                        </li>

                        <li >
                            <%= link_to('Cart', show_cart_path)%>
                        </li>
                        <li>
                            <%= link_to('Sign Out', destroy_user_session_path, method:"delete") %>
                        </li>
                    </ul>
                            <%else%>
                        <ul class="nav navbar-nav">
                        <li>
                        <%= link_to('Sign In / Sign Up', new_user_session_path) %>
                        </li>
                    </ul>
                    <%end%>
                </div>

            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

<%= yield %>

        <!-- Devise Alerts -->
        <!--<h3>Users</h3>-->
        <%#= button_to('Sign Out', destroy_user_session_path, method:"delete", class:"btn btn-primary" ) %>
        <%#= link_to('Sign In', new_user_session_path, class:"btn btn-primary") %>
        <%#= link_to('Cart', show_cart_path, class:"btn btn-primary")%>

        <!--<h3>Admin</h3>-->
        <%#= button_to('Sign Out', destroy_admin_session_path, method:"delete", class:"btn btn-primary" ) %>
        <%#= link_to('Sign In', new_admin_session_path, class:"btn btn-primary") %>
        <%#= link_to('Product List', products_path, class:"btn btn-primary")%>

<!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Disclaimer: This is not a real shop!</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="../assets/javascripts/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../assets/javascripts.min.js"></script>

</body>
</html>

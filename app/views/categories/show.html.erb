<!DOCTYPE html>
<html lang="en">

<head>
<title>GrumpyShop</title>
</head>
<body>

    <div class="container">

        <header class="jumbotron hero-spacer">
            <h1><%=@category.name%></h1>
        </header>
        <hr>

        <div class="row text-center">

            <%@category.products.each do |product| %>
                <div class="col-md-3 col-sm-6 hero-feature">
                    <%= link_to product_path(product), class:"links" do %>
                    <div class="thumbnail">
                        <img class="links" src="<%= product.image_url %>" alt="" class="img_resize">
                        <div class="caption">
                            <h3><%=product.name%></h3>
                            <p>
                    <% end %>
                                <a><%= link_to'More Info', product_path(product), class:"btn btn-primary links"%></a>
                            </p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>

        <hr>
</body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
<title>Qwertyshop</title>

</head>

<body>

    <!-- Page Content -->
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron hero-spacer">
            <h1><%=@product.name%></h1>
            <h3>Shipping now for only $ <%=@product.price%></h3><br>
            <%if user_signed_in? %>
            <%=link_to "Buy Now!", add_product_path(:id => @product.id), method:"post", class:"btn btn-primary"%>
            <% else %>
             <%= link_to('Log In To Purchace', new_user_session_path, class:"btn btn-primary") %>
            <% end %>
        </header>
        <hr>
        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3></h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">
            <div class="col-md-12 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="<%= @product.image_url %>" alt="">
                    <div class="caption">
                        <h3><%=@product.name%></h3>
                        <p><%=@product.description%></p>
                        <%if user_signed_in? %>
                                    <%=link_to "Buy Now!", add_product_path(:id => @product.id), method:"post", class:"btn btn-primary"%>
                                    <% else %>
                                     <%= link_to('Log In To Purchace', new_user_session_path, class:"btn btn-primary") %>
                                    <% end %>
                    </div>
                </div>
            </div>







        </div>
        <!-- /.row -->

        <hr>

</body>

</html>

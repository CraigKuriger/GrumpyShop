<!DOCTYPE html>
<html lang="en">

<head>
<title>Qwertyshop</title>

</head>

<body>

    <!-- Page Content -->
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron hero-spacer">
            <h1><%=@product.name%></h1>
            <p>Shipping now for only $ <%=@product.price%></p>
            <p><%= link_to'Shop Now!', categories_path, class:"btn btn-primary btn-large"%></p>
        </header>

        <hr>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3></h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">

            <div class="col-md-12 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="<%= @product.image_url %>" alt="">
                    <div class="caption">
                        <h3><%=@product.name%></h3>
                        <p><%=@product.description%></p>
                        <p>
                            <a href="<%=add_product_path(:id => @product.id)%>" class="btn btn-primary">Buy Now!</a> <a href="#" class="btn btn-default">More Info</a>

                            <%=link_to "Buy", add_product_path(:id => @product.id), method:"post", class:"btn btn-primary"%>
                        </p>
                    </div>
                </div>
            </div>







        </div>
        <!-- /.row -->

        <hr>

</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
<title>GrumpyShop</title>

</head>

<body>
<div class="container">



        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>All Products</h3><%=link_to "Add New Product", new_product_path, class:"btn btn-primary"%>
            </div><br>
        </div><br>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">

            <%@products.each do |product|%>
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="<%=product.image_url%>" alt="">
                    <div class="caption">
                        <h3><%=product.name%></h3>
                        <p><%=product.category.class%></p>
                        <p><%=product.price%></p>
                        <p>
                            <%=link_to "Delete", product_path(product.id), method:"delete", class:"btn btn-primary"%> <%=link_to "Edit", edit_product_path(product.id), method:"get", class:"btn btn-default"%>
                        </p>
                    </div>
                </div>
            </div>
            <%end%>
        </div>
        <!-- /.row -->

        <hr>



</body>

</html>
